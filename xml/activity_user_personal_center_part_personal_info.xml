<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    layout_width="match_parent"
    layout_height="match_parent"
    focusable="true"
    focusableInTouchMode="true"
    gravity="center"
    orientation="vertical" >

    <ImageView
        id="@+id/user_head"
        layout_width="106dp"
        layout_height="106dp" />

    <EditText
        id="@+id/user_name"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="@dimen/user_personal_username_to_top"
        background="@null"
        imeOptions="actionDone"
        maxLength="16"
        singleLine="true"
        text="@string/user_personal_center_default_username"
        textColor="@color/user_register_agree_color"
        textSize="@dimen/text_size_32"
        enabled="false" />

    <TextView
        id="@+id/user_work"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="@dimen/user_personal_username_to_top"
        text="@string/user_personal_center_default_work"
        textColor="@color/user_register_agreement_color"
        textSize="@dimen/text_size_18" />

    <TextView
        id="@+id/user_age"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="@dimen/user_personal_age_to_top"
        text="@string/user_personal_center_default_ages"
        textColor="@color/user_register_agreement_color"
        textSize="@dimen/text_size_18" />

    <ImageView
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="@dimen/user_personal_line_to_top"
        background="@drawable/user_person_line" />

</LinearLayout>
